if(EXISTS "${CMAKE_CURRENT_LIST_DIR}/install_manifest.txt")
    file(READ "${CMAKE_CURRENT_LIST_DIR}/install_manifest.txt" files)
    foreach(file ${files})
        message(STATUS "Uninstalling ${file}")
        execute_process(COMMAND ${CMAKE_COMMAND} -E remove "${file}")
    endforeach()
    message(STATUS "Uninstallation complete.")
else()
    message(WARNING "Cannot find install_manifest.txt")
endif()